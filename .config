# =====================
# RK3128 TP-9038 打印机服务器配置
# =====================

# 目标系统
CONFIG_TARGET_rockchip=y
CONFIG_TARGET_SUBTARGET="rk3128"
CONFIG_TARGET_BOARD="rockchip"
CONFIG_TARGET_rockchip_rk3128=y
CONFIG_TARGET_rockchip_rk3128_DEVICE_tlink_r1=y

# 镜像配置
CONFIG_TARGET_ROOTFS_PARTSIZE=256
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_GRUB_IMAGES=y
CONFIG_GRUB_TIMEOUT=0
CONFIG_GRUB_BOOTOPTS="console=ttyS2,115200n8 earlyprintk"

# 内核配置
CONFIG_KERNEL_BUILD_USER="RK3128-Printer-Server"
CONFIG_KERNEL_BUILD_DOMAIN="github.com"
CONFIG_KERNEL_CFLAGS="-O2 -pipe -mtune=cortex-a7"
CONFIG_KERNEL_DEBUG_INFO=n

# 基础包
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_fdisk=y
CONFIG_PACKAGE_lsblk=y
CONFIG_PACKAGE_blkid=y
CONFIG_PACKAGE_usbutils=y
CONFIG_PACKAGE_pciutils=y

# 网络配置
CONFIG_PACKAGE_dnsmasq=y
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_DNSMASQ_FULL_DHCP=y
CONFIG_PACKAGE_iptables=y
CONFIG_PACKAGE_iptables-mod-extra=y
CONFIG_PACKAGE_iptables-mod-filter=y

# USB 支持
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb-ohci=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-usb-storage-extras=y
CONFIG_PACKAGE_kmod-usb-printer=y
CONFIG_PACKAGE_usbids=y

# 网络驱动
CONFIG_PACKAGE_kmod-r8169=y
CONFIG_PACKAGE_kmod-mii=y
CONFIG_PACKAGE_kmod-phy-realtek=y

# 无线驱动 - RTL8188/8192 系列
CONFIG_PACKAGE_kmod-rtl8xxxu=y
CONFIG_PACKAGE_kmod-rtl8192cu=y
CONFIG_PACKAGE_kmod-rtlwifi=y
CONFIG_PACKAGE_kmod-rtlwifi-usb=y
CONFIG_PACKAGE_wpad-basic=y

# 打印机服务核心包
CONFIG_PACKAGE_p910nd=y
CONFIG_PACKAGE_cups=y
CONFIG_PACKAGE_cups-filters=y
CONFIG_PACKAGE_cups-client=y
CONFIG_PACKAGE_cups-bsd=y
CONFIG_PACKAGE_cups-pdf=n
CONFIG_PACKAGE_cups-drivers=n

# CUPS 依赖
CONFIG_PACKAGE_ghostscript=y
CONFIG_PACKAGE_gsfonts=y
CONFIG_PACKAGE_foomatic-filters=y
CONFIG_PACKAGE_foomatic-db=y
CONFIG_PACKAGE_foomatic-db-engine=y
CONFIG_PACKAGE_foomatic-db-ppds=y

# 库文件
CONFIG_PACKAGE_libcups=y
CONFIG_PACKAGE_libcupsimage=y
CONFIG_PACKAGE_libpng=y
CONFIG_PACKAGE_libtiff=y
CONFIG_PACKAGE_libjpeg=y
CONFIG_PACKAGE_zlib=y
CONFIG_PACKAGE_libusb-1.0=y

# LuCI 界面
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_luci-app-cups=y
CONFIG_PACKAGE_luci-app-p910nd=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

# 中文支持
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-cups-zh-cn=y
CONFIG_PACKAGE_luci-i18n-p910nd-zh-cn=y

# 文件系统
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-vfat=y
CONFIG_PACKAGE_kmod-fs-exfat=y
CONFIG_PACKAGE_exfat-mkfs=y
CONFIG_PACKAGE_exfat-fsck=y

# 工具
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_nano=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget=y
CONFIG_PACKAGE_vim=n

# SSH 服务
CONFIG_PACKAGE_openssh-server=y
CONFIG_PACKAGE_dropbear=y

# 时区
CONFIG_PACKAGE_zoneinfo-asia=y
CONFIG_PACKAGE_zoneinfo-core=y

# 自动挂载
CONFIG_PACKAGE_automount=y
CONFIG_PACKAGE_autocore=y

# 优化
CONFIG_CCACHE=y
CONFIG_BUILD_LOG=y
CONFIG_SDK=y
CONFIG_STRIP_KERNEL_EXPORTS=y
CONFIG_USE_MUSL=y
CONFIG_USE_UCLIBCXX=n

# 移除不需要的组件
CONFIG_PACKAGE_firewall=n
CONFIG_PACKAGE_odhcpd=n
CONFIG_PACKAGE_ppp=n
CONFIG_PACKAGE_ppp-mod-pppoe=n
CONFIG_PACKAGE_wpad=n
CONFIG_PACKAGE_wpad-basic-wolfssl=y
